{{>layout/header}}
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
{{#cart}}
    <div class="container p-3 my-3 border">
        <h2 class="center">{{name}}</h2>
        <table class="table table-bordered">
            <thread>
                <tr>
                    <th>수량 : <input type='number' name='' step='1' value="{{amount}}" style="width:100px" min='1'/></th>
                    <th><button id="{{id}}">장바구니에서 제거</button></th>
                </tr>
            </thread>
        </table>
    </div>

    <script>
        $( document ).ready( function() {
        $( 'button#{{id}}' ).click( function() {
            $( '#{{id}}' ).parent().parent().parent().parent().parent().remove();
           } );
         } );
    </script>
{{/cart}}

{{^cart}}
    <div class="container p-3 my-3 border">
        <h2 class="center">장바구니에 아무것도 없습니다!</h2>
    </div>
{{/cart}}

{{#true}}
    <button type="button" class="btn btn-success btn-block">결제</button>
{{/true}}

